<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="@dimen/layout_padding">

    <TextView
        android:id="@+id/text_country_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_country_margin"
        android:textColor="@color/white"
        android:text="@string/text_country_region"
        android:textSize="@dimen/text_country_size"
        app:layout_constraintEnd_toStartOf="@+id/text_country_code"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/text_country_code"
        android:textSize="@dimen/text_country_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_country_region"
        app:layout_constraintTop_toTopOf="@+id/text_country_region" />

    <TextView
        android:id="@+id/text_country_capital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/text_country_margin"
        android:text="@string/text_country_capital"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_country_region" />

</androidx.constraintlayout.widget.ConstraintLayout>


